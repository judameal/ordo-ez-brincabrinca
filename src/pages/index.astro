<Layout title="Inicio">
  <style>

    .contact-links {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 1rem;
      margin-top: 1.5rem;
    }
    .contact-link {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 1rem;
      background: var(--color-paper);
      border-radius: 8px;
      box-shadow: 0 2px 10px var(--color-shadow);
      color: var(--color-text);
      text-decoration: none;
      transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
      font-weight: 500;
    }
    .contact-link:hover {
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 6px 20px var(--color-shadow);
      background: linear-gradient(135deg, var(--color-accent), #1d4ed8);
      color: white;
    }
    .contact-link .icon {
      width: 24px;
      height: 24px;
	}
    /* Estilos personalizados para el contenido de index */
    .hero {
      text-align: center;
      margin-bottom: 3rem;
      padding: 2rem 0;
    }

    .hero img {
      border-radius: 50%;
      border: 3px solid var(--color-accent);
      object-fit: cover;
      box-shadow: 0 0 20px var(--color-shadow);
      transition: transform 0.3s ease;
    }

    .hero img:hover {
      transform: scale(1.05);
    }

    .hero h2 {
      margin-top: 1rem;
      font-size: clamp(1.5rem, 4vw, 1.8rem);
      color: var(--color-text);
    }

    .hero p {
      font-size: 1rem;
      opacity: 0.8;
    }

    .section {
      margin-bottom: 3rem;
      padding: 1.5rem;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 8px;
      box-shadow: 0 2px 10px var(--color-shadow);
      transition: box-shadow 0.3s ease;
    }

    .section:hover {
      box-shadow: 0 4px 20px var(--color-shadow);
    }

    .section h3 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      color: var(--color-accent);
      border-bottom: 2px solid var(--color-accent);
      padding-bottom: 0.5rem;
    }

    .section ul {
      list-style: none;
      padding-left: 0;
    }

    .section li {
      margin-bottom: 0.5rem;
      font-size: 1rem;
    }

    .projects-grid {
      display: grid;
      gap: 1.5rem;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      margin-top: 1rem;
    }

    .project-card {
      background: var(--color-paper);
      border-radius: 8px;
      padding: 1.5rem;
      box-shadow: 2px 2px 10px var(--color-shadow);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      text-align: center;
    }

    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px var(--color-shadow);
    }

    .project-card h4 {
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
      color: var(--color-accent);
    }

    .project-card p {
      font-size: 0.9rem;
      margin-bottom: 1rem;
      opacity: 0.8;
    }

    .project-card a {
      display: inline-block;
      padding: 0.5rem 1rem;
      background: var(--color-accent);
      color: white;
      border-radius: 5px;
      text-decoration: none;
      transition: background 0.3s ease;
    }

    .project-card a:hover {
      background: #1d4ed8;
    }

    .contact-form {
      max-width: 500px;
      margin: 0 auto;
    }

    .contact-form input,
    .contact-form textarea {
      width: 100%;
      padding: 0.75rem;
      margin-bottom: 1rem;
      border: 1px solid var(--color-accent);
      border-radius: 5px;
      background: var(--color-paper);
      color: var(--color-text);
      font-family: inherit;
    }

    .contact-form button {
      width: 100%;
      padding: 0.75rem;
      background: var(--color-accent);
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .contact-form button:hover {
      background: #1d4ed8;
    }

    .cv-button {
      display: inline-block;
      margin-top: 1rem;
      padding: 0.75rem 1.5rem;
      background: var(--color-accent);
      color: white;
      text-decoration: none;
      border-radius: 5px;
      transition: background 0.3s ease;
    }

    .cv-button:hover {
      background: #1d4ed8;
    }

    /* Responsividad */
    @media (max-width: 768px) {
      .hero {
        padding: 1rem 0;
      }

      .section {
        padding: 1rem;
      }

      .projects-grid {
        grid-template-columns: 1fr;
      }
    }
